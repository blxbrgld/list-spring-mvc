<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						http://www.springframework.org/schema/security
						http://www.springframework.org/schema/security/spring-security-3.2.xsd
						http://www.springframework.org/schema/context 
						http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<http auto-config="true" use-expressions="true">
		<form-login 
			login-page="/login.html"
			authentication-failure-url="/login.html?failed=true"
			default-target-url="/" />
		<remember-me />
		<logout logout-success-url="/" />
		<access-denied-handler error-page="/denied.html" />
		<intercept-url pattern="/activity/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/administrator/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/artist/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/category/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/comment/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/item/list" access="permitAll" />
		<intercept-url pattern="/item/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/role/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/subtitles/**" access="hasRole('Administrator')" />
		<intercept-url pattern="/user/**" access="hasRole('Administrator')" />
	</http>

	<beans:bean id="bCryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
	
	<authentication-manager>
		<authentication-provider user-service-ref="userDetailsServiceAdapter">
			<password-encoder ref="bCryptPasswordEncoder" />
		</authentication-provider>
	</authentication-manager>
	
	<global-method-security pre-post-annotations="enabled" />
	
</beans:beans>